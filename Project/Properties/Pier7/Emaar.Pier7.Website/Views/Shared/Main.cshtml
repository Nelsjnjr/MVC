<head id="Head1">
    <title>@Model.Title</title>
    @Html.Sitecore().VisitorIdentification()
    <meta name="Title" content="@Model.MetaTitle" />
    <meta name="PageTitle" content="@Model.MetaTitle" />
    <meta name="keywords" content="@Model.MetaKeywords" />
    <meta name="Description" content="@Model.MetaDescription" />
    <meta name="og:type" content="@Model.OpenGraphType" />
    <meta name="og:title" content="@Model.OpenGraphTitle" />
    <meta name="og:url" content="@(!String.IsNullOrEmpty(Model.Url)?Model.Url:Request.Url.AbsoluteUri.ToString())" />
    <meta name="og:description" content="@Model.OpenGraphDescription" />

    <link rel="canonical" href="@(!String.IsNullOrEmpty(Model.Url)?Model.Url:Request.Url.AbsoluteUri.ToString())" />

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

