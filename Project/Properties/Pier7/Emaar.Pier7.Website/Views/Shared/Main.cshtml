<body>


    <div id="homePage" class="mainContainer">

        <!--Start Header -->
        @Html.Sitecore().Placeholder("phHeader")
        <!--End Header-->
        <!-- Start Body -->
        @Html.Sitecore().Placeholder("phMain")

        <!--End body -->
        <!-- Start Social -->
        <div class='socialmediaIcons'>
            @{
                var item = Sitecore.Context.Database.GetItem(Sitecore.Data.ID.Parse("{C8EF78EB-F336-4EEE-8D32-7D6F661D8357}"));
            }
            @Html.Sitecore().ItemRendering(item)

        </div>
        <!--End Social -->
        <!-- Start Footer-->
        @Html.Sitecore().Placeholder("phFooter")
        <!-- End Footer-->

    </div>
    <script>
        $("label").each(function (index) {
            $(this).removeClass("control-label");
            $(this).css("font-weight", "normal");

        });

        $("form").parent().addClass("contentContainer").prepend($("h2")).find('h2').replaceWith(function () {
            return '<h1>' + $(this).text() + '</h1>';
        });
        $(".page-header").removeClass("page-header");

    </script>

